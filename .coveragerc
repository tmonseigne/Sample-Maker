[coverage:run]
branch = True

[coverage:report]
# Exclure toutes les lignes de code dans les fichiers de test
omit =
    Tests/*
    main.py
    **/__init__.py

exclude_lines =
    # Ces commentaires excluent des lignes spécifiques si elles sont détectées
    pragma: no cover

exclude_also =
    if platform.system()
